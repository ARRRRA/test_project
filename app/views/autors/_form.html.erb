<% if @autor.errors.any? %>
	<div class="alert a;ert-danger">
		<h5><%= t('common.errors') %></h5>
		<ul>
			<%= @autor.errors.full_messages.each do |message| %>
			<li>
				<%= message %>
			</li>
			<% end %>
		</ul>
	</div>
<% end %>


<%= form_for @autor do |f| %>
	<div class="form-group">
		<%= f.label :last_name %>
		<%= f.text_field :last_name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control'  %>
	</div>

	<div class="form-group">
		<%= f.label :year_of_birth %>
		<%= f.text_field :year_of_birth, class: 'form-control'  %>
	</div>

	<div class="form-group">
		<%= f.label :year_of_death %>
		<%= f.text_field :year_of_death, class: 'form-control'  %>
	</div>

	<div class="form-group">
		<%= f.submit 'Save', class: 'btn btn-primary' %>
		<%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
	</div>
<% end %>