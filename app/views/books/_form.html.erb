<% if @book.errors.any? %>
	<div class="alert a;ert-danger">
		<h5><%= t('common.errors') %></h5>
		<ul>
			<%= @book.errors.full_messages.each do |message| %>
			<li>
				<%= message %>
			</li>
			<% end %>
		</ul>
	</div>
<% end %>


<%= form_for @book do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :autor_id %>
		<%= collection_select( :book, :autor_id, Autor.all, :id, :name_with_initial, prompt: true) %>
	</div>

	<div class="form-group">
		<%= f.label :genre %>
		<%= f.text_field :genre, class: 'form-control'  %>
	</div>

	<div class="form-group">
		<%= f.label :descriptions %>
		<div class="selectContainer">
			<%= f.text_field :descriptions, class: 'form-control'  %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :treasure %>
		<%= f.text_field :treasure, class: 'form-control'  %>
	</div>

	<div class="form-group">
		<%= f.label :count %>
		<%= f.text_field :count, class: 'form-control'  %>
	</div>

	<div class="form-group">
		<%= f.label :available %>
		<%= f.text_field :available, class: 'form-control'  %>
	</div>

	<div class="form-group">
		<%= f.submit 'Save', class: 'btn btn-primary' %>
		<%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
	</div>
<% end %>