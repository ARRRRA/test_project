<article class="book">
	<section class="book-head">
		<h1><%= @book.name %></h1>
	</section>

	<section class="book-body">
		<h5>Genre:</h3>
		<%= @book.genre %>
	</section>
	<section class="book-body">
		<h5>Descriptions:</h3>
		<%= @book.descriptions %>
	</section>
	<section class="book-body">
		<h5>Treasure:</h3>
		<%= @book.treasure%>
	</section>
	<section class="book-body">
		<h5>Author:</h3>
		<%= @book.autor.last_name+" "+@book.autor.name %>
	</section>
	
</article>