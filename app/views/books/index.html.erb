<h1>Books</h1>


<%= form_tag(books_path, method: :get) do %>
	<div class="form-group">
  		<%= text_field_tag :term, params[:term], class: 'form-control'  %>
 	</div>
  	<div class="form-group">
  		<%= submit_tag 'Search', :name => nil , class: 'btn btn-primary' %>
  	</div>
<% end %>


<%= render @books %>


